{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/pnpm",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ]
}